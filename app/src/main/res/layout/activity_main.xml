<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/cat"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/meawtext"
        android:layout_width="match_parent"
        android:layout_height="310dp"
        android:layout_marginTop="220dp"
        android:fontFamily="casual"
        android:hint="Every time you tap on cat with pencil, you get a fact"
        android:padding="10dp"
        android:text="Cat is very sweet and cute animal, they dont like to being caged or having belt around their neck"
        android:textColor="#573C42"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/meaw"
        android:layout_width="80dp"
        android:layout_height="90dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/kitty"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/meawtext" />

